{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./packages",
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSources": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext",
    "module": "CommonJS",
    "useDefineForClassFields": false
  }
}
